# Ternary VAE v5.5 - Environment Configuration Template
# Copy this to .env and adjust as needed

# Device Configuration
DEVICE=cuda                    # Options: cuda, cpu, mps (for Apple Silicon)
CUDA_VISIBLE_DEVICES=0         # GPU device ID (if multiple GPUs)

# Random Seeds (for reproducibility)
SEED=42                        # Master seed
TORCH_SEED=42                  # PyTorch seed
NUMPY_SEED=42                  # NumPy seed

# Deterministic Mode
DETERMINISTIC=true             # Enable deterministic CUDA operations
CUDNN_BENCHMARK=false          # Disable cuDNN autotuning for reproducibility
CUBLAS_WORKSPACE_CONFIG=:4096:8  # Deterministic cuBLAS operations

# Performance
NUM_WORKERS=0                  # DataLoader workers (0 for debugging, 4-8 for production)
PIN_MEMORY=true                # Pin memory for faster GPU transfer
MIXED_PRECISION=false          # Use FP16 training (experimental)

# Paths
CHECKPOINT_DIR=checkpoints     # Checkpoint save directory
LOG_DIR=logs                   # Training log directory
DATA_DIR=data                  # Dataset cache directory

# Logging
LOG_LEVEL=INFO                 # Options: DEBUG, INFO, WARNING, ERROR
PROGRESS_BAR=true              # Show tqdm progress bars
TENSORBOARD=false              # Enable TensorBoard logging
WANDB=false                    # Enable Weights & Biases logging

# Monitoring
SAVE_FREQ=10                   # Checkpoint save frequency (epochs)
EVAL_FREQ=1                    # Evaluation frequency (epochs)
LOG_FREQ=1                     # Logging frequency (epochs)

# Safety
GRADIENT_CLIP=1.0              # Gradient clipping threshold
NAN_DETECTION=true             # Abort on NaN/Inf losses
MEMORY_EFFICIENT=false         # Use gradient checkpointing (slower but less memory)

# Development
DEBUG=false                    # Enable debug mode (verbose logging)
PROFILE=false                  # Enable profiling
OVERFIT_BATCH=false            # Overfit single batch (for debugging)
